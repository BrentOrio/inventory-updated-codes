    <script>
        // ===== FULLY FUNCTIONAL DEMO – EVERY BUTTON CLICKABLE =====
        // all original logic preserved + extended for real interactivity
        
        // ===== PAGE NAVIGATION SYSTEM =====
        // This makes the upper buttons actually switch between different pages
        
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-section').forEach(page => {
                page.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
            
            // Update breadcrumb
            const pageNames = {
                dashboardPage: 'Dashboard',
                inventoryPage: 'Inventory',
                checkoutPage: 'Check Out',
                reportsPage: 'Reports',
                settingsPage: 'Settings'
            };
            document.getElementById('breadcrumbCurrent').textContent = pageNames[pageId] || 'Dashboard';
            
            // Update active nav state
            document.querySelectorAll('nav a').forEach(link => {
                link.classList.remove('active');
            });
            
            // Map pageId to nav ID
            const navMap = {
                dashboardPage: 'navDashboard',
                inventoryPage: 'navInventory',
                checkoutPage: 'navCheckout',
                reportsPage: 'navReports',
                settingsPage: 'navSettings'
            };
            
            const navId = navMap[pageId];
            if (navId) {
                document.getElementById(navId).classList.add('active');
            }
            
            // Update breadcrumb links
            document.getElementById('breadcrumbInventory').style.display = 
                (pageId === 'inventoryPage' || pageId === 'checkoutPage') ? 'inline' : 'none';
            
            // Special handling for dashboard view all button
            if (pageId === 'inventoryPage') {
                // Refresh inventory counts
                updateDashboardCounts();
                filterTable();
            }
        }

        // ----- toast system (original) -----
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            let icon = 'fa-info-circle';
            if (type === 'success') icon = 'fa-check-circle';
            if (type === 'error') icon = 'fa-exclamation-circle';
            if (type === 'warning') icon = 'fa-exclamation-triangle';
            toast.innerHTML = `<i class="fas ${icon}"></i><div>${message}</div>`;
            toastContainer.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 10);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 4000);
        }

        // ----- scroll progress -----
        window.addEventListener('scroll', function() {
            const scrollProgress = document.getElementById('scrollProgress');
            const windowHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (window.pageYOffset / windowHeight) * 100;
            scrollProgress.style.width = `${scrolled}%`;
        });

        // ========== INVENTORY DATA & UI UPDATE FUNCTIONS ==========
        function updateDashboardCounts() {
            const rows = document.querySelectorAll('#inventoryTableBody tr');
            let total = rows.length;
            let checkedOut = 0, maintenance = 0, available = 0;
            rows.forEach(row => {
                const status = row.querySelector('.status')?.textContent.trim().toLowerCase();
                if (status?.includes('available')) available++;
                else if (status?.includes('checked out')) checkedOut++;
                else if (status?.includes('maintenance')) maintenance++;
            });
            
            // Update dashboard cards on both pages
            document.getElementById('totalEquipmentValue').textContent = total;
            document.getElementById('checkedOutValue').textContent = checkedOut;
            document.getElementById('maintenanceValue').textContent = maintenance;
            document.getElementById('availableValue').textContent = available;
        }

        function filterTable() {
            const searchTerm = document.getElementById('searchInput')?.value.toLowerCase() || '';
            const category = document.getElementById('categoryFilter')?.value || '';
            const location = document.getElementById('locationFilter')?.value || '';
            const activeTab = document.querySelector('.tab.active')?.dataset.tab || 'all';
            
            const rows = document.querySelectorAll('#inventoryTableBody tr');
            rows.forEach(row => {
                let show = true;
                const text = row.textContent.toLowerCase();
                const rowCategory = row.dataset.category;
                const rowLocation = row.dataset.location;
                const rowStatus = row.dataset.status;
                
                if (searchTerm && !text.includes(searchTerm)) show = false;
                if (category && rowCategory !== category) show = false;
                if (location && rowLocation !== location) show = false;
                
                if (activeTab === 'available' && rowStatus !== 'available') show = false;
                if (activeTab === 'checkedout' && rowStatus !== 'checkedout') show = false;
                if (activeTab === 'maintenance' && rowStatus !== 'maintenance') show = false;
                
                row.style.display = show ? '' : 'none';
            });
            updateDashboardCounts();
        }

        // ----- checkout / return global functions -----
        window.checkoutItem = function(itemId) {
            const modal = document.getElementById('confirmationModal');
            document.getElementById('modalMessage').textContent = `Are you sure you want to check out item ${itemId}?`;
            modal.style.display = 'flex';
            document.getElementById('modalConfirm').onclick = function() {
                showToast(`Checking out item ${itemId}...`, 'info');
                setTimeout(() => {
                    // update UI
                    const row = Array.from(document.querySelectorAll('#inventoryTableBody tr')).find(r => r.dataset.id === itemId);
                    if (row) {
                        const statusCell = row.querySelector('.status');
                        statusCell.className = 'status status-checked-out';
                        statusCell.textContent = 'Checked out';
                        row.dataset.status = 'checkedout';
                        row.querySelector('.checkout-btn')?.remove();
                        const actionsCell = row.cells[6];
                        actionsCell.innerHTML = `<button class="btn btn-primary btn-sm return-btn" data-id="${itemId}"><i class="fas fa-sign-in-alt"></i> Return</button>`;
                        attachRowButtons(row);
                    }
                    showToast(`Item ${itemId} checked out successfully!`, 'success');
                    modal.style.display = 'none';
                    filterTable();
                    updateDashboardCounts();
                }, 1000);
            };
        };

        window.returnItem = function(itemId) {
            showToast(`Processing return for item ${itemId}...`, 'info');
            setTimeout(() => {
                const row = Array.from(document.querySelectorAll('#inventoryTableBody tr')).find(r => r.dataset.id === itemId);
                if (row) {
                    const statusCell = row.querySelector('.status');
                    statusCell.className = 'status status-available';
                    statusCell.textContent = 'Available';
                    row.dataset.status = 'available';
                    row.querySelector('.return-btn')?.remove();
                    const actionsCell = row.cells[6];
                    actionsCell.innerHTML = `<button class="btn btn-success btn-sm checkout-btn" data-id="${itemId}"><i class="fas fa-sign-out-alt"></i> Check out</button>`;
                    attachRowButtons(row);
                }
                showToast(`Item ${itemId} returned successfully!`, 'success');
                setTimeout(() => showToast('Please inspect equipment and update condition if needed.', 'info'), 1000);
                filterTable();
                updateDashboardCounts();
            }, 1500);
        };

        // attach button handlers dynamically
        function attachRowButtons(row) {
            row.querySelectorAll('.checkout-btn').forEach(btn => {
                btn.removeEventListener('click', checkoutHandler);
                btn.addEventListener('click', checkoutHandler);
            });
            row.querySelectorAll('.return-btn').forEach(btn => {
                btn.removeEventListener('click', returnHandler);
                btn.addEventListener('click', returnHandler);
            });
            row.querySelectorAll('.repair-btn').forEach(btn => {
                btn.removeEventListener('click', repairHandler);
                btn.addEventListener('click', repairHandler);
            });
        }
        function checkoutHandler(e) { window.checkoutItem(e.currentTarget.dataset.id); }
        function returnHandler(e) { window.returnItem(e.currentTarget.dataset.id); }
        function repairHandler(e) { 
            const itemId = e.currentTarget.dataset.id;
            showToast(`Item ${itemId} marked as repaired and returned to inventory!`, 'success');
            setTimeout(() => window.returnItem(itemId), 500);
        }

        // ========== EVENT LISTENERS ==========
        document.addEventListener('DOMContentLoaded', function() {
            // attach all row buttons
            document.querySelectorAll('#inventoryTableBody tr').forEach(row => attachRowButtons(row));
            updateDashboardCounts();
            
            // set first tab active
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelector('.tab')?.classList.add('active');
            
            // Set today's date for checkout page
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('checkoutDate').value = today;
        });

        // ----- NAVIGATION: Make upper buttons FUNCTIONAL (not just toast) -----
        document.getElementById('navDashboard').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('dashboardPage');
            showToast('Dashboard loaded', 'success');
        });
        
        document.getElementById('navInventory').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('inventoryPage');
            showToast('Inventory management loaded', 'success');
        });
        
        document.getElementById('navCheckout').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('checkoutPage');
            showToast('Check out equipment', 'info');
        });
        
        document.getElementById('navReports').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('reportsPage');
            showToast('Reports & analytics', 'info');
        });
        
        document.getElementById('navSettings').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('settingsPage');
            showToast('System settings', 'info');
        });

        // ----- Breadcrumb navigation -----
        document.getElementById('breadcrumbHome').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('dashboardPage');
        });
        
        document.getElementById('breadcrumbInventory').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('inventoryPage');
        });

        // ----- Footer navigation -----
        document.getElementById('footerDashboard').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('dashboardPage');
        });
        
        document.getElementById('footerInventory').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('inventoryPage');
        });
        
        document.getElementById('footerReports').addEventListener('click', function(e) {
            e.preventDefault();
            showPage('reportsPage');
        });
        
        document.getElementById('footerHelp').addEventListener('click', function(e) {
            e.preventDefault();
            showToast('Help & support - Contact IT department', 'info');
        });

        // ----- Dashboard view all button -----
        document.getElementById('dashboardViewAllBtn')?.addEventListener('click', function() {
            showPage('inventoryPage');
        });

        // ----- Process checkout button -----
        document.getElementById('processCheckoutBtn')?.addEventListener('click', function() {
            const scanInput = document.getElementById('checkoutScanInput').value;
            const borrower = document.getElementById('checkoutBorrower').value;
            const date = document.getElementById('checkoutDate').value;
            
            if (!scanInput || !borrower) {
                showToast('Please enter equipment ID and borrower name', 'error');
                return;
            }
            
            showToast(`Processing checkout for ${scanInput}...`, 'info');
            setTimeout(() => {
                showToast(`Item ${scanInput} checked out to ${borrower}`, 'success');
                document.getElementById('checkoutScanInput').value = '';
                document.getElementById('checkoutBorrower').value = '';
            }, 1500);
        });

        // ----- form submission -----
        document.getElementById('equipmentForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('equipmentName').value;
            const category = document.getElementById('category').value;
            const location = document.getElementById('location').value;
            const quantity = document.getElementById('quantity').value;
            
            ['equipmentName', 'category', 'location', 'quantity'].forEach(id => {
                document.getElementById(id).style.borderColor = '';
            });
            
            if (!name || !category || !location || !quantity) {
                document.getElementById('errorMessage').style.display = 'flex';
                showToast('Please fill in all required fields', 'error');
                if (!name) document.getElementById('equipmentName').style.borderColor = 'var(--accent-500)';
                if (!category) document.getElementById('category').style.borderColor = 'var(--accent-500)';
                if (!location) document.getElementById('location').style.borderColor = 'var(--accent-500)';
                if (!quantity) document.getElementById('quantity').style.borderColor = 'var(--accent-500)';
                return;
            }
            
            document.getElementById('formProgress').style.width = '100%';
            showToast('Processing your request...', 'info');
            
            setTimeout(() => {
                document.getElementById('errorMessage').style.display = 'none';
                document.getElementById('successMessage').style.display = 'flex';
                showToast('Equipment added successfully to inventory!', 'success');
                
                // Add new row to table
                const tbody = document.getElementById('inventoryTableBody');
                const newId = 'EQ-' + (1000 + tbody.children.length + 1);
                const newRow = document.createElement('tr');
                newRow.dataset.id = newId;
                newRow.dataset.status = 'available';
                newRow.dataset.category = category;
                newRow.dataset.location = location;
                newRow.innerHTML = `
                    <td>${newId}</td>
                    <td>${name}</td>
                    <td>${category}</td>
                    <td>${location}</td>
                    <td><span class="status status-available">Available</span></td>
                    <td>${new Date().toISOString().split('T')[0]}</td>
                    <td><button class="btn btn-success btn-sm checkout-btn" data-id="${newId}"><i class="fas fa-sign-out-alt"></i> Check out</button></td>
                `;
                tbody.appendChild(newRow);
                attachRowButtons(newRow);
                
                document.getElementById('equipmentForm').reset();
                document.getElementById('formProgress').style.width = '33%';
                
                setTimeout(() => {
                    document.getElementById('addEquipmentForm').style.display = 'none';
                    document.getElementById('successMessage').style.display = 'none';
                }, 3000);
                
                filterTable();
                updateDashboardCounts();
            }, 1500);
        });

        // ----- add equipment button -----
        document.getElementById('addEquipmentBtn')?.addEventListener('click', function() {
            document.getElementById('addEquipmentForm').style.display = 'block';
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('addEquipmentForm').scrollIntoView({ behavior: 'smooth' });
        });

        // ----- cancel form -----
        document.getElementById('cancelForm')?.addEventListener('click', function() {
            document.getElementById('addEquipmentForm').style.display = 'none';
            document.getElementById('equipmentForm').reset();
            document.getElementById('formProgress').style.width = '33%';
            showToast('Form cancelled', 'info');
        });

        // ----- load more button (adds demo row) -----
        document.getElementById('loadMoreBtn')?.addEventListener('click', function() {
            const btn = this;
            const loadingDiv = document.getElementById('loadingMore');
            btn.style.display = 'none';
            loadingDiv.style.display = 'block';
            
            setTimeout(() => {
                const tbody = document.getElementById('inventoryTableBody');
                const newId = 'EQ-' + (1000 + tbody.children.length + 1);
                const newRow = document.createElement('tr');
                newRow.dataset.id = newId;
                newRow.dataset.status = 'available';
                newRow.dataset.category = 'Office Supplies';
                newRow.dataset.location = 'Library';
                newRow.innerHTML = `
                    <td>${newId}</td>
                    <td>Office Chair</td>
                    <td>Office Supplies</td>
                    <td>Library</td>
                    <td><span class="status status-available">Available</span></td>
                    <td>${new Date().toISOString().split('T')[0]}</td>
                    <td><button class="btn btn-success btn-sm checkout-btn" data-id="${newId}"><i class="fas fa-sign-out-alt"></i> Check out</button></td>
                `;
                tbody.appendChild(newRow);
                attachRowButtons(newRow);
                
                showToast('5 more equipment items loaded', 'info');
                loadingDiv.style.display = 'none';
                btn.style.display = 'inline-block';
                filterTable();
                updateDashboardCounts();
            }, 2000);
        });

        // ----- export button -----
        document.getElementById('exportBtn')?.addEventListener('click', function() {
            showToast('Preparing export file...', 'info');
            setTimeout(() => showToast('Export completed! Download will start automatically.', 'success'), 2000);
        });

        // ----- modal cancel & close -----
        document.getElementById('modalCancel')?.addEventListener('click', function() {
            document.getElementById('confirmationModal').style.display = 'none';
            showToast('Action cancelled', 'info');
        });
        window.addEventListener('click', function(e) {
            const modal = document.getElementById('confirmationModal');
            if (e.target === modal) {
                modal.style.display = 'none';
                showToast('Action cancelled', 'info');
            }
        });

        // ----- tabs (fully functional) -----
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                filterTable();
                showToast(`Showing ${this.textContent}`, 'info');
            });
        });

        // ----- filter buttons -----
        document.getElementById('applyFiltersBtn')?.addEventListener('click', function() {
            filterTable();
            showToast('Filters applied', 'info');
        });
        document.getElementById('clearFiltersBtn')?.addEventListener('click', function() {
            document.getElementById('searchInput').value = '';
            document.getElementById('categoryFilter').value = '';
            document.getElementById('locationFilter').value = '';
            filterTable();
            showToast('Filters cleared', 'info');
        });

        // ----- search on enter -----
        document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') filterTable();
        });

        // ----- category/location filter change -----
        document.getElementById('categoryFilter')?.addEventListener('change', filterTable);
        document.getElementById('locationFilter')?.addEventListener('change', filterTable);

        // ----- settings menu items -----
        document.querySelectorAll('.settings-menu-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.settings-menu-item').forEach(i => i.classList.remove('active'));
                this.classList.add('active');
                showToast(`Settings: ${this.textContent}`, 'info');
            });
        });

        // ----- report buttons -----
        document.querySelectorAll('.report-card .btn-primary').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                const reportType = this.closest('.report-card').querySelector('h3').textContent;
                showToast(`Generating ${reportType}...`, 'info');
                setTimeout(() => showToast(`${reportType} generated successfully`, 'success'), 1500);
            });
        });

        // ----- welcome toast -----
        window.addEventListener('load', function() {
            setTimeout(() => showToast('Welcome to SJCB Equipment Management System', 'info'), 500);
            // Ensure dashboard is shown by default
            showPage('dashboardPage');
        });

        // ----- keyboard escape -----
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && e.target.type === 'submit') e.target.click();
            if (e.key === 'Escape' && document.getElementById('confirmationModal').style.display === 'flex') {
                document.getElementById('confirmationModal').style.display = 'none';
                showToast('Action cancelled', 'info');
            }
        });

        // ----- form field focus effect -----
        document.querySelectorAll('input, select, textarea').forEach(field => {
            field.addEventListener('focus', function() {
                this.parentElement.style.backgroundColor = 'rgba(37, 99, 235, 0.02)';
                this.parentElement.style.padding = '0.75rem';
                this.parentElement.style.borderRadius = '0.5rem';
                this.parentElement.style.transition = 'all 0.2s';
            });
            field.addEventListener('blur', function() {
                this.parentElement.style.backgroundColor = '';
                this.parentElement.style.padding = '';
            });
        });
    </script>
</body>
</html>
